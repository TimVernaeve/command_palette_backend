{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "exactOptionalPropertyTypes": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}